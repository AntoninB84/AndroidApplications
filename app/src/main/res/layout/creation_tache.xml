<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container_creation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fond3"
    android:orientation="vertical"
    android:weightSum="100">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="10"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/tv_btn_creation"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:text="Créer une tâche"
        android:gravity="center"
        android:background="@drawable/border_bottom_large"/>

    <TextView
        android:id="@+id/tv_btn_categorie"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:text="Catégories"
        android:gravity="center"
        android:background="@drawable/border_bottom"/>
</LinearLayout>

    <LinearLayout
        android:id="@+id/lyt_creation_tache"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="90"
        android:orientation="vertical"
        android:visibility="visible">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:padding="20dp">
                <EditText
                    android:id="@+id/et_titre_tache"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#FFFFFF"
                    android:hint="Titre"
                    android:maxLines="1"
                    android:maxLength="17"/>

                <EditText
                    android:id="@+id/et_description_tache"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Description"
                    android:lines="10"
                    android:textColor="#494747"
                    android:textColorHint="#494747" />
                    <RadioGroup
                        android:id="@+id/rg_priorite"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="10"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp">
                        <RadioButton
                            android:id="@+id/rb_q"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Q"
                            android:textColor="#494747"
                            android:layout_weight="2"/>
                        <RadioButton
                            android:id="@+id/rb_r"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="R"
                            android:textColor="#494747"
                            android:layout_weight="2"/>
                        <RadioButton
                            android:id="@+id/rb_ct"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CT"
                            android:textColor="#494747"
                            android:layout_weight="2"/>
                        <RadioButton
                            android:id="@+id/rb_mt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="MT"
                            android:textColor="#494747"
                            android:layout_weight="2"/>
                        <RadioButton
                            android:id="@+id/rb_lt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="LT"
                            android:textColor="#494747"/>
                    </RadioGroup>
                <LinearLayout
                    android:id="@+id/lyt_choix_categorie"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="visible"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Catégorie :"
                        android:textSize="18sp"
                        android:layout_marginRight="10dp"/>
                    <Spinner
                        android:id="@+id/sp_choix_categorie"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lyt_creation_intervalle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Intervalle :"
                        android:textSize="18sp"
                        android:layout_marginRight="30dp"/>
                    <EditText
                        android:id="@+id/et_intervalle_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLength="3"
                        android:hint="002"
                        android:layout_marginRight="10dp"
                        android:inputType="number"/>

                    <Spinner
                        android:id="@+id/sp_creation_intervalle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lyt_dateDepart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="gone">
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Date de départ :"
                    android:textSize="18sp"/>

                <CalendarView
                    android:id="@+id/cw_creation_datedepart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lyt_date_limite"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="gone">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Date limite :"
                    android:textSize="18sp"/>
                    <CheckBox
                        android:id="@+id/cb_date_limite"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"/>
                </LinearLayout>
                <CalendarView
                    android:id="@+id/cw_creation_datelimite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lyt_creation_rappel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rappel :"
                        android:textSize="18sp"
                        android:layout_marginRight="30dp"/>
                    <EditText
                        android:id="@+id/et_rappel_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLength="3"
                        android:hint="001"
                        android:layout_marginRight="10dp"
                        android:inputType="number"/>

                    <Spinner
                        android:id="@+id/sp_creation_rappel"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="50dp"
                    android:paddingRight="50dp"
                    android:layout_marginTop="20dp">
                    <Button
                        android:id="@+id/btn_creation_tache"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Creer cette tâche"/>
                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/lyt_creation_categorie"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="90"
        android:padding="20dp"
        android:orientation="vertical"
        android:visibility="gone">
        <EditText
            android:id="@+id/et_titre_categorie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nouvelle catégorie"
            android:textColor="#FFFFFFFF"
            android:textColorHint="#FFFFFFFF"
            android:layout_marginTop="20dp"
            android:maxLength="50"/>

        <Button
            android:id="@+id/btn_ajouter_categorie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="Ajouter"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="70dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="@drawable/cellule">

            <Spinner
                android:id="@+id/sp_liste_categorie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="12sp"
            android:text="Toutes les tâches sous cette catégorie prendront la catégorie Autres"
            android:textColor="#AD000000" />
        <Button
            android:id="@+id/btn_supprimer_categorie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="Supprimer"
            android:layout_marginTop="20dp"/>



    </LinearLayout>



</LinearLayout>